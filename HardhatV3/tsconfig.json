/* tsconfig.json */
{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "types": ["node", "hardhat", "@nomicfoundation/hardhat-viem"]
  },
  "include": ["hardhat.config.ts", "scripts/**/*.ts", "test/**/*.ts"]
}
